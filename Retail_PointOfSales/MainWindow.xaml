<Window x:Class="Retail_PointOfSales.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Retail_PointOfSales"
        mc:Ignorable="d"
       Title="MainWindow" Height="750" MaxWidth="1000" Background="Gray">

    <Grid >
        <!-- <ContentControl Name="MainContent"/> -->
        <StackPanel Margin="0,-10,0,20" Background="#FF1F1D1D">
            <!-- Title -->
            <Grid Margin="0,0,0,10" Background="Aqua">
                <TextBlock Text="POINT OF SALE" FontSize="16" FontWeight="Bold" Margin="10,0,0,0" Foreground="Black" FontFamily="Gadugi" />
            </Grid>

            <!-- Search Row -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Search Label -->
                <Label Content="Search" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,50" Foreground="AntiqueWhite" VerticalContentAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>

                <!-- Search TextBox -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBox x:Name="SearchTextBox" Width="500" Height="30" Margin="0,0,0,40" TextChanged="SearchTextBox_TextChanged"/>
                    <!-- <ComboBox x:Name="ProductComboBox" Width="300" IsEditable="False" IsReadOnly="True" SelectionChanged="ProductComboBox_SelectionChanged"/> -->
                    <Button Content="Add Product" Width="85" Height="30" Margin="20,0,0,40" Click="OpenSearchPanel" FontWeight="SemiBold" />
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Main Section -->
        <Grid Margin="10,70,0,80" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" MinWidth="635"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Product List -->
            <ListView x:Name="ProductListView" Height="auto" Grid.Column="0" Grid.Row="0" Margin="0,0,15,0" BorderBrush="Aqua">
                <ListView.View >
                    <GridView>
                        <GridViewColumn Header="Id" DisplayMemberBinding="{Binding ProductId}" Width="30"/>
                        <GridViewColumn Header="Product name" DisplayMemberBinding="{Binding ProductName}" Width="350"/>
                        <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Quantity}" Width="100"/>
                        <GridViewColumn Header="Price" DisplayMemberBinding="{Binding ProductPrice, StringFormat=C}" Width="100"/>
                        <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount, StringFormat=C}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Right Panel -->
            <Grid Margin="665,10,30,10" Grid.RowSpan="2" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Delete Button -->
                <Button Width="110" Height="80" Margin="5" Grid.Row="0" Grid.Column="0" Background="#FF1F1D1D" Foreground="AntiqueWhite"
                        Click="DeleteProduct" BorderBrush="Aqua" >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <!-- Image -->
                        <Image Source= "Images/delete.png" Width="20" Height="20" Margin="5,10,5,5"/>
                        <!-- Content -->
                        <TextBlock Text="Delete" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Void Order Button -->
                <Button Width="110" Height="80" Margin="100,0,10,0" Grid.Row="0" Background="Red" Foreground="AntiqueWhite" 
                        Grid.ColumnSpan="2" BorderBrush="Aqua" >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <!-- Image -->
                        <Image Source="Images/remove.png" Width="20" Height="20" Margin="5,10,5,5"/>
                        <!-- Content -->
                        <TextBlock Text="Void Order" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Opening Fund Button -->
                <Button Width="110" Height="80" Margin="10,10,10,0" Grid.Row="1" Grid.Column="0" Background="#FF1F1D1D" Foreground="AntiqueWhite" 
                        Click="OpeningFundButton_Click" BorderBrush="Aqua">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <!-- Image -->
                        <Image Source= "Images/openingFund.png" Width="30" Height="30" Margin="5,10,5,5"/>
                        <!-- Content -->
                        <TextBlock Text="Opening Fund" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- End of Day Sales Button -->
                <Button Width="110" Height="80" Margin="100,10,10,0" Grid.Row="1" Background="#FF1F1D1D" Foreground="AntiqueWhite" 
                        Click="EndofDayButton_Click" Grid.ColumnSpan="2" BorderBrush="Aqua">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <!-- Image -->
                        <Image Source="Images/endDay.png" Width="30" Height="30" Margin="5,10,5,5"/>
                        <!-- Content -->
                        <TextBlock Text="End of Day" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Mode of Payment -->
                <Label  Content="Mode of Payment" Height="30" Margin="19,10,47,1" Background="#FF237B23" Grid.Row="2" Foreground="AntiqueWhite" 
                        Grid.Column="0" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <!-- Cash Button -->
                <Button Width="110" Height="80" Margin="10,10,10,0" Grid.Row="3" Grid.Column="0" Background="#FF1F1D1D" Foreground="AntiqueWhite" 
                        Click="CashPaymentButton_Click" BorderBrush="Aqua">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <!-- Image -->
                        <Image Source="Images/cash.png" Width="30" Height="30" Margin="5,10,5,5"/>
                        <!-- Content -->
                        <TextBlock Text="Cash" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Credit Card Button -->
                <Button Width="110" Height="80" Margin="110,10,20,0" Grid.Row="3" Background="#FF1F1D1D" Foreground="AntiqueWhite"  
                        Grid.ColumnSpan="2" BorderBrush="Aqua" Click="CreditPaymentButton_Click">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <!-- Image -->
                        <Image Source="Images/credit-card.png" Width="30" Height="30" Margin="5,10,5,5"/>
                        <!-- Content -->
                        <TextBlock Text="Credit Card" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Border Grid.Row="4"  Background="Yellow" Width="230" Height="5" Margin="10,10,0,0" 
                        VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>

                <!-- Sales Report Button -->
                <Button Width="110" Height="80" Margin="10,10,10,0" Grid.Row="5" Grid.Column="0" Background="#FF1F1D1D" Foreground="AntiqueWhite" 
                        Click="SalesReportButton_Click" BorderBrush="Aqua" >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <!-- Image -->
                        <Image Source="Images/end-of-year.png" Width="30" Height="30" Margin="5,10,5,5"/>
                        <!-- Content -->
                        <TextBlock Text="Sales Report" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

            </Grid>

            <Grid Grid.Row="0" Grid.Column="0">
                <!-- Search Panel (Hidden Initially) -->
                <Border x:Name="SearchPanel" Background="White" Visibility="Collapsed"
                        BorderBrush="Black" BorderThickness="2" Padding="10"
                        VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBox x:Name="SearchTextBox2"/>
                        <Button Content="Search by product" Width="120" Margin="10,0,0,0" Click="SearchButton_Click"  />
                        <ListView x:Name="SearchPanel_ProductList" SelectionChanged="ProductSelected" BorderBrush="Aqua">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding ProductId}" Width="100"></GridViewColumn>
                                    <GridViewColumn Header="Product Name" DisplayMemberBinding="{Binding ProductName, StringFormat=C}" Width="150" />
                                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding ProductPrice, StringFormat=C}" Width="100"></GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Content="Close" Click="CloseSearchPanel"/>
                    </StackPanel>
                </Border>

                <!-- Quantity Panel (Hidden Initially) -->
                <Border x:Name="QuantityPanel" Background="White" Visibility="Collapsed"
                        BorderBrush="Black" BorderThickness="2" Padding="10"
                        VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBlock x:Name="SelectedProductText" FontWeight="Bold"/>
                        <TextBox x:Name="QuantityTextBox"/>
                        <Button Content="Confirm" Click="ConfirmQuantity"/>
                        <Button Content="Cancel" Click="CloseQuantityPanel"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Date and Time and Total -->
            <Grid Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="10,10,10,10" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- Date & Time -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Stretch">
                    <Label Content="Date:" Foreground="AntiqueWhite" Margin="5" />
                    <TextBox x:Name="DateTextBox" Width="100" Height="30" IsReadOnly="True" Margin="5" />
                    <Label Content="Time:" Foreground="AntiqueWhite" Margin="5" />
                    <TextBox x:Name="TimeTextBox" Width="100" Height="30" IsReadOnly="True" Margin="5" />
                </StackPanel>

                <!-- Total -->
                <StackPanel Orientation="Horizontal"  Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,30,0">
                    <TextBlock Text="TOTAL :" Margin="5" FontWeight="Bold" Foreground="AntiqueWhite" FontSize="30" />
                    <TextBlock Text="0.00" Margin="5" FontWeight="Bold" x:Name="TotalTextBlock" Foreground="AntiqueWhite" FontSize="30" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
