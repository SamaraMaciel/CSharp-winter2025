<Window x:Class="Retail_PointOfSales.CashPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Retail_PointOfSales"
        mc:Ignorable="d"
        Title="Cash Payment" MaxHeight="400" MaxWidth="400">
    <Grid Margin="10"  Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <TextBlock Grid.Row="0" Text="CASH PAYMENT"  FontSize="20" FontWeight="Bold" Foreground="#FFF0A61C" 
                   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,10,0,20" 
                   Grid.Column="0"  Grid.ColumnSpan="2"  Width="320"  />

        <!-- Payment Labels and Values -->
        <!-- TOTAL SALES -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Subtotal ($):" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#FF13E7F7" FontSize="15"/>
        <TextBox Name="SubtotalSalesTextBox" Grid.Row="1" Grid.Column="1" Width="100" Height="30" Margin="20,0,0,0" Text="0.00" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="15" 
                 Background="Black" Foreground="White" FontWeight="Bold" BorderThickness="0" IsReadOnly="True"/>

        <!-- DISCOUNT -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Discount ($):" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#FF5D5F5F" FontSize="15"/>
        <TextBox Name="DiscountTextBox" Grid.Row="2" Grid.Column="1" Width="100" Height="30" Margin="20,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="15"
                 Foreground="#FF5D5F5F" FontWeight="Bold" BorderThickness="0" Background="Black" TextChanged="CalculateTotal" />

        <!-- GRAND TOTAL -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Total ($):" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Yellow" FontSize="15"/>
        <TextBox Name="TotalTextBox" Grid.Row="3" Grid.Column="1" Width="100" Height="30" Margin="20,0,0,0" Text="0.00" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="15"
                 Foreground="#FFF0A61C" FontWeight="Bold" BorderThickness="0" Background="Black" IsReadOnly="True"/>

        <!-- CASH TENDERERED -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Cash Tendered ($):" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#FF13E7F7" FontSize="15"/>
        <TextBox Name="CashTenderedTextBox"  Grid.Row="4" Grid.Column="1" Width="100" Height="30" Margin="20,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="15"
                 Foreground="White" FontWeight="Bold" BorderThickness="0" Background="Black" TextChanged="CalculateChange"/>

        <!-- CHANGE -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Change ($):" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#FF13E7F7" FontSize="15"/>
        <TextBox Name="ChangeTextBox" Grid.Row="5" Grid.Column="1" Width="100" Height="30" Margin="20,0,0,0" Text="0.00" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="15" 
                 Foreground="Yellow" FontWeight="Bold" BorderThickness="0" Background="Black" IsReadOnly="True"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50,0,0,0" Grid.Column="1" Height="50" Width="220">
            <Button Content="Enter" Width="80" Height="30" Margin="5,5,5,0" Background="Green" Foreground="White" VerticalAlignment="Center" Click="EnterButton_Click"/>
            <Button Content="Cancel" Width="80" Height="30" Margin="5,5,5,0" Background="Red" Foreground="White" VerticalAlignment="Center" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>

</Window>
